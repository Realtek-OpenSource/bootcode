menu "RealTek 1295 Board Type"
	depends on TARGET_RTD1295

choice
	prompt "Board Type Select"

config BOARD_FPGA
	bool "RTD1295 FPGA Board"

config BOARD_QA
	bool "RTD1295 QA Board"

endchoice
endmenu

if TARGET_RTD1295

config SYS_VENDOR
	default "realtek"

config SYS_SOC
	default "rtd1295"

config SYS_BOARD
	default "1295_fpga" if BOARD_FPGA
	default "1295_qa" if BOARD_QA

config SYS_CONFIG_NAME
	default "rtd1295_fpga" if BOARD_FPGA
	default "rtd1295_qa" if BOARD_QA


endif #TARGET_RTD1295
